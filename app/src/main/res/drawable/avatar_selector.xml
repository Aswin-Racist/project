<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/avatar_selected" />
            <stroke 
                android:width="2dp"
                android:color="@color/avatar_stroke" />
            <corners android:radius="8dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/avatar_normal" />
            <stroke 
                android:width="1dp"
                android:color="@color/avatar_border" />
            <corners android:radius="8dp" />
        </shape>
    </item>
</selector>
